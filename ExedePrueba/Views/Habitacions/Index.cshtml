@model IEnumerable<ExedePrueba.ViewModels.GetHabitaciones>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h2>Index</h2>
    <p>
        @Html.ActionLink("Crear nueva habitacion", "Create",new { id = ViewBag.Id_hotel },null)
    </p>
</div>
<div class="row">


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_Hotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaximaCantidadHuespedes)
            </th>
            <th>Tipo alojamiento</th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Hotel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaximaCantidadHuespedes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoAlojamiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
